
@{
    ViewData["Title"] = "FindRecipe";
}
@model FinalProject_Recipes.Models.Recipe
<h1 style="font-family:Bahnschrift;color:black;text-shadow:  -1px -1px 0 white,
    1px -1px 0 white, -1px 1px 0 white, 1px 1px 0 white">Found Recipes</h1>
@{ if (Model.meals != null)
   {
        <table class="table-dark">
            <tr style="font-family:Bahnschrift;color:black;text-shadow:  -1px -1px 0 white,
    1px -1px 0 white, -1px 1px 0 white, 1px 1px 0 white">
                <th><b><u>Meal</u></b></th>
            </tr>
            @foreach (var item in Model.meals)
            {
                if (item != null)
                {
                    <tr style="font-family:Bahnschrift;color:black;text-shadow:  -1px -1px 0 white,
    1px -1px 0 white, -1px 1px 0 white, 1px 1px 0 white">
                        <td>@item.strMeal</td>
                        <td><img src="@item.strMealThumb" alt="@item.strMeal" width="100" height="100" /></td>
                        <td>@Html.ActionLink("View Recipe", "ViewRecipe","Recipe", item)</td>
                    </tr>
                }
            }
        </table>
    }
    else
    {
        <p style="font-family:Bahnschrift;color:black;text-shadow:  -1px -1px 0 white,
    1px -1px 0 white, -1px 1px 0 white, 1px 1px 0 white">Sorry, no recipes matched your search and your preferences.</p>
    }
}

