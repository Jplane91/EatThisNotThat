
@{
    ViewData["Title"] = "FindRecipe";
}
@model FinalProject_Recipes.Models.Recipe
<h1>Found Recipes</h1>
@{ if (Model.meals != null)
   {
        <table class="table-dark">
            <tr>
                <th><b><u>Meal</u></b></th>
            </tr>
            @foreach (var item in Model.meals)
            {
                if (item != null)
                {
                    <tr>
                        <td>@item.strMeal</td>
                        <td><img src="@item.strMealThumb" alt="@item.strMeal" width="100" height="100" /></td>
                        <td>@Html.ActionLink("View Recipe", "ViewRecipe","Recipe", item)</td>
                    </tr>
                }
            }
        </table>
    }
    else
    {
        <p>Sorry, no recipes matched your search and your preferences.</p>
    }
}

