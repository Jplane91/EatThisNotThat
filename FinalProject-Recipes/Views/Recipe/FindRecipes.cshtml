
@{
    ViewData["Title"] = "FindRecipe";
}
@model FinalProject_Recipes.Models.Recipe
<h1 class="text-center" style="font-family:Bahnschrift;color:black;text-shadow:  -1px -1px 0 white, 1px -1px 0 white,
    -1px 1px 0 white, 1px 1px 0 white">Found Recipes</h1>
<div style="align-content:center">

@{ if (Model.meals != null)
    {

        <div class="row" style="text-align:center;margin-left:120px;margin-right:100px">
            @foreach (var item in Model.meals)
            {
                <div class="column">
                    <div class="border-style">
                        <div style="font-family:Bahnschrift;font-size:large;color:black;text-shadow:  -1px -1px 0 white, 1px -1px 0 white, -1px 1px 0 white, 1px 1px 0 white">
                            @item.strMeal
                        </div>
                        <div>
                            <a title=" @item.strMeal" href='@Url.Action("ViewRecipe", "Recipe", item)'>
                                <img src='@Url.Content(item.strMealThumb)' width="200" style="margin:15px; border:solid;border-color:white;border-width:10px" />
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }



    else
    {
        < p > Sorry, no recipes matched your search and your preferences.</ p >
    }
}
}
    </div>

<style>
    .border-style {
        padding-left: 10px;
        padding-right: 10px;
        text-align: center;
        font-family: 'Times New Roman', Times, serif;
        font-size: medium;
        border: solid;
        border-color: transparent;
        border-width: thick;
        margin: 15px;
    }
</style>
