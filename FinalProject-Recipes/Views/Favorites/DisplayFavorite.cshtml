
@{
    ViewData["Title"] = "DisplayFavorite";
}

@model IEnumerable<FinalProject_Recipes.Models.FavoriteRecipes>

<h1>Display Favorite</h1>

<table class="table-dark" style="border-spacing: 15px 2px; border-collapse: separate; border-color: white;">
    <tr>
        <th><b><u>Favorites</u></b></th>
    </tr>
    @{ foreach (var recipe in Model)
        {
        <tr>
            <td>@recipe.RecipeName</td>
            <td><img src="@recipe.RecipeImage" alt="@recipe.RecipeName" width="100" height="100" /></td>
            <td>@Html.ActionLink("View Recipe", "ViewRecipe","Favorites", recipe)</td>
            
            <td>@Html.ActionLink("Remove From List", "RemoveFavorite", "Favorites", recipe)</td>
        </tr>
        }
    }

    @*sending form to somewhere*@
</table>